        }

        .mobile-nav a.has-children {
            position: relative;
        }

        .mobile-nav a.has-children:after {
            content: '\f107';
            font-family: 'Font Awesome 5 Free';
            font-weight: 900;
            position: absolute;
            right: 20px;
            transition: transform 0.3s;
        }

        .mobile-nav a.has-children.active:after {
            transform: rotate(180deg);
        }

