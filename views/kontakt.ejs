        </div>
        
        <!-- Kontakt forma sekcija -->
        <div class="contact-form-section">
            <h2>Pošaljite nam poruku</h2>
            <form class="contact-form" method="post" action="/kontakt">
                <div class="form-group">
                    <label for="name">Vaše ime i prezime:</label>
                    <input type="text" id="name" name="name" placeholder="Unesite ime i prezime..." required>
                </div>
                <div class="form-group">
                    <label for="email">Email adresa:</label>
                    <input type="email" id="email" name="email" placeholder="Unesite email adresu..." required>
                </div>
                <div class="form-group">
                    <label for="phone">Broj telefona:</label>
                    <input type="tel" id="phone" name="phone" placeholder="Unesite broj telefona...">
                </div>
                <div class="form-group">
                    <label for="subject">Predmet:</label>
                    <input type="text" id="subject" name="subject" placeholder="Unesite predmet poruke...">
                </div>
                <div class="form-group" style="grid-column: 1 / -1;">
                    <label for="message">Vaša poruka:</label>
                    <textarea id="message" name="message" placeholder="Unesite vašu poruku..." required></textarea>
                </div>
                <div class="form-group" style="grid-column: 1 / -1;">
                    <button type="submit" class="submit-btn">POŠALJI</button>
                </div>
            </form>
        </div>
    </div>

    <%-include('partials/footer.ejs')%>

    <script>
        let date = new Date();
    let year = date.getFullYear();
    const footerYear = document.querySelector(".footer-bottom p");
    const mobileFooterYear = document.querySelector(".mobile-copyright");
    
    if (footerYear) {
        footerYear.textContent = `© ${year} WebKutak`;
    }
    
    if (mobileFooterYear) {
        mobileFooterYear.innerHTML = `© ${year} WebKutak`;
    }

document.addEventListener('DOMContentLoaded', function() {
    // Hamburger menu functionality
    const hamburgerMenu = document.getElementById('hamburgerMenu');
    const closeMenu = document.getElementById('closeMenu');
    const mobileNav = document.getElementById('mobileNav');
    const mobileOverlay = document.getElementById('mobileOverlay');
    
    // Function to open menu
    function openMenu() {
        mobileNav.classList.add('active');
        mobileOverlay.classList.add('active');
        hamburgerMenu.classList.add('active');
        document.body.style.overflow = 'hidden';
    }
    
    // Function to close menu
    function closeMenuFunc() {
        mobileNav.classList.remove('active');
        mobileOverlay.classList.remove('active');
        hamburgerMenu.classList.remove('active');
        document.body.style.overflow = '';
    }
    
    // Event listeners
    if (hamburgerMenu) {
        hamburgerMenu.addEventListener('click', openMenu);
    }
    
    if (closeMenu) {
        closeMenu.addEventListener('click', closeMenuFunc);
    }
    
    if (mobileOverlay) {
        mobileOverlay.addEventListener('click', closeMenuFunc);
    }
    
    // Mobile SVE KATEGORIJE dropdown functionality
    const sveKategorijeMobile = document.querySelector('.mobile-nav .sve-kategorije');
    
    if (sveKategorijeMobile) {
        // Add class for arrow icon
        sveKategorijeMobile.classList.add('has-children');
        
        // Create mobile submenu if it doesn't exist
        let mobileSubMenu = document.querySelector('.mobile-subcategories');
        if (!mobileSubMenu) {
            mobileSubMenu = document.createElement('div');
            mobileSubMenu.className = 'mobile-subcategories';
            
            mobileSubMenu.innerHTML = `
                        <a href="/svekategorije/bijelatehnika"><i class="fas fa-tools"></i> Bijela tehnika</a>
                        <a href="/svekategorije/tviaudio"><i class="fas fa-tv"></i> Televizori i audio</a>
                        <a href="/svekategorije/sporetikaminipeci"><i class="fas fa-fire"></i> Šporeti, kamini i peći</a>
                        <a href="/svekategorije/ugradnatehnika"><i class="fas fa-plug"></i> Ugradna tehnika</a>
                        <a href="/svekategorije/telefonigaming"><i class="fas fa-gamepad"></i> Telefoni i Gaming</a>
                        <a href="/svekategorije/malikucniaparati"><i class="fas fa-blender"></i> Mali kućni aparati</a>
                        <a href="/svekategorije/grijanjeihladjenje"><i class="fas fa-snowflake"></i> Grijanje i hlađenje</a>
                        <a href="/svekategorije/laptopitableti"><i class="fas fa-laptop"></i> Laptop i tableti</a>
                        <a href="/svekategorije/razno"><i class="fas fa-bolt"></i> Razno</a>
                    `;
            
            // Insert submenu after "SVE KATEGORIJE" link
            sveKategorijeMobile.parentNode.insertBefore(mobileSubMenu, sveKategorijeMobile.nextSibling);
        }
        
        // Toggle for submenu
        sveKategorijeMobile.addEventListener('click', function(e) {
            e.preventDefault();
            e.stopPropagation();
            
            this.classList.toggle('active');
            
            if (mobileSubMenu.style.display === 'block') {
                mobileSubMenu.style.display = 'none';
            } else {
                mobileSubMenu.style.display = 'block';
            }
        });
    }

    // Close menu when clicking on mobile links (except SVE KATEGORIJE)
    const mobileNavLinks = document.querySelectorAll('.mobile-nav a:not(.sve-kategorije)');
    mobileNavLinks.forEach(link => {
        link.addEventListener('click', function(e) {
            // Don't close if it's a submenu item
            if (this.closest('.mobile-subcategories')) {
                e.stopPropagation();
                return;
            }
            closeMenuFunc();
        });
    });
    
    // Desktop navigation
    const sveKategorijeBtn = document.getElementById('sveKategorijeDesktop');
    const megaDropdown = document.getElementById('megaDropdown');
    
    if (sveKategorijeBtn && megaDropdown) {
        sveKategorijeBtn.addEventListener('click', function(e) {
            e.preventDefault();
            
            if (megaDropdown.style.display === 'block') {
                megaDropdown.style.display = 'none';
                sveKategorijeBtn.classList.remove('active');
            } else {
                megaDropdown.style.display = 'block';
                sveKategorijeBtn.classList.add('active');
            }
        });
        
        // Close dropdown when clicking outside
        document.addEventListener('click', function(e) {
            if (megaDropdown.style.display === 'block' && 
                !megaDropdown.contains(e.target) && 
                e.target !== sveKategorijeBtn) {
                megaDropdown.style.display = 'none';
                sveKategorijeBtn.classList.remove('active');
            }
        });
    }
            
            // Postavi današnji dan u radnom vremenu
            const dayOfWeek = new Date().getDay(); // 0 = nedjelja, 1 = ponedjeljak, itd.
            const hourItems = document.querySelectorAll('.hour-item');
            
            if (hourItems.length > 0) {
                // Ukloni .today klasu sa svih elemenata
                hourItems.forEach(item => item.classList.remove('today'));
                
                // Dodaj .today klasu odgovarajućem danu
                // Note: Prilagođavamo indeks jer dayOfWeek daje 0 za nedjelju, a naša lista počinje od ponedjeljka
                const todayIndex = dayOfWeek === 0 ? 6 : dayOfWeek - 1;
                if (hourItems[todayIndex]) {
                    hourItems[todayIndex].classList.add('today');
                }
            }
            
            // Validacija kontakt forme
            const contactForm = document.querySelector('.contact-form');
            
            if (contactForm) {
                contactForm.addEventListener('submit', function(e) {
                    e.preventDefault();
                    
                    // Osnovna validacija
                    const name = document.getElementById('name').value;
                    const email = document.getElementById('email').value;
                    const message = document.getElementById('message').value;
                    
                    if (!name || !email || !message) {
                        alert('Molimo popunite sva obavezna polja.');
                        return;
                    }
                    
                    // Validacija email formata
                    const emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
                    if (!emailRegex.test(email)) {
                        alert('Molimo unesite ispravan email format.');
                        return;
                    }
                    
                    // Ako je sve u redu, možete ovdje dodati kod za slanje forme
                    alert('Vaša poruka je uspješno poslata! Odgovorićemo vam u najkraćem mogućem roku.');
                    contactForm.reset();
                });
            }
            
            // Ažuriranje godine u footeru
        });
    </script>
</body>
</html>