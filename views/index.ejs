    // Mobilna verzija kategorija
    if (window.innerWidth <= 768) {
        const categoryContainer = document.querySelector('.categories-container');
        const categoryCards = document.querySelectorAll('.category-card');
        
        // Provera da li su kontrole kategorija dostupne
        const categoryPrev = document.querySelector('.categories-controls .prev');
        const categoryNext = document.querySelector('.categories-controls .next');
        
        if (categoryContainer && categoryCards.length > 0) {
            // Dodaj scroll snapping for mobile
            categoryContainer.style.scrollSnapType = 'x mandatory';
            categoryCards.forEach(card => {
                card.style.scrollSnapAlign = 'start';
            });
            
            // Ako postoje kontrole, dodaj event listenere
            if (categoryPrev && categoryNext) {
                categoryPrev.addEventListener('click', function() {
                    categoryContainer.scrollBy({ left: -categoryCards[0].offsetWidth - 20, behavior: 'smooth' });
                });
                
                categoryNext.addEventListener('click', function() {
                    categoryContainer.scrollBy({ left: categoryCards[0].offsetWidth + 20, behavior: 'smooth' });
                });
            }
        }
    }
    
    // Prilagođavanje za resize
    window.addEventListener('resize', function() {
        const megaDropdown = document.querySelector('.mega-dropdown');
        const newBtn = document.querySelector('.sve-kategorije');
        
        if (megaDropdown && window.innerWidth <= 768) {
            megaDropdown.style.display = 'none';
            if (newBtn) {
                newBtn.classList.remove('active');
            }
        }
    });
});
