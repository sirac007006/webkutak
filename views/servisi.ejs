        }

        /* Hamburger icon hidden when menu is open */
        .hamburger-menu.active {
            opacity: 0; /* Hide hamburger when menu is open */
            pointer-events: none; /* Disable clicks on hidden element */
        }
        
        .mobile-top-nav {
