                            <img src="<%= proizvodi[i].slka || '/nemaslike.png' %>" alt="Product placeholder">
                        </div>
                        <div class="product-info">
                            <div class="product-brand"><%=proizvodi[i].brend%></div>
                            <div class="product-title"><%=proizvodi[i].naziv%></div>
                            <div class="product-price-info">
                                <div class="product-price"><%=proizvodi[i].cena_sapdv%>€</div>
