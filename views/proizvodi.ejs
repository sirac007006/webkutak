<script>
    let date = new Date();
    let year = date.getFullYear();
    const footerYear = document.querySelector(".footer-bottom p");
    const mobileFooterYear = document.querySelector(".mobile-copyright");
    
    if (footerYear) {
        footerYear.textContent = `© ${year} WebKutak`;
    }
    
    if (mobileFooterYear) {
        mobileFooterYear.textContent = `© ${year} WebKutak`;
    }
    document.querySelector(".apply-filters").addEventListener("click", () => {
    const brands = Array.from(document.querySelectorAll("input[name='brand']:checked")).map(cb => cb.value);
    const min = document.getElementById("minPriceRange").value;
    const max = document.getElementById("maxPriceRange").value;

    const params = new URLSearchParams();
    brands.forEach(b => params.append("brand", b));
    params.set("min", min);
    params.set("max", max);

    const newUrl = `${window.location.pathname}?${params.toString()}`;
    window.location.href = newUrl;
});

    document.addEventListener('DOMContentLoaded', function() {
     // Dohvati DOM elemente
     const hamburgerMenu = document.getElementById('hamburgerMenu');
     const closeMenu = document.getElementById('closeMenu');
     const mobileNav = document.getElementById('mobileNav');
     const mobileOverlay = document.getElementById('mobileOverlay');
     
     // Price range slider elementi
     const minPriceRange = document.getElementById('minPriceRange');
     const maxPriceRange = document.getElementById('maxPriceRange');
     const minPriceDisplay = document.getElementById('minPrice');
     const maxPriceDisplay = document.getElementById('maxPrice');
     const rangeProgress = document.querySelector('.price-range-progress');
 
     // Funkcija za otvaranje menija
     function openMenu() {
         mobileNav.classList.add('active');
         mobileOverlay.classList.add('active');
         hamburgerMenu.classList.add('active');
         document.body.style.overflow = 'hidden';
     }
 
     // Funkcija za zatvaranje menija
     function closeMenuFunc() {
         mobileNav.classList.remove('active');
         mobileOverlay.classList.remove('active');
         hamburgerMenu.classList.remove('active');
         document.body.style.overflow = '';
     }
 
     // Event listeneri
     if (hamburgerMenu) {
         hamburgerMenu.addEventListener('click', openMenu);
     }
 
     if (closeMenu) {
         closeMenu.addEventListener('click', closeMenuFunc);
     }
 
     if (mobileOverlay) {
         mobileOverlay.addEventListener('click', closeMenuFunc);
     }
      // Mobile SVE KATEGORIJE dropdown functionality
      const sveKategorijeMobile = document.querySelector('.mobile-nav .sve-kategorije');
            
            if (sveKategorijeMobile) {
                // Add class for arrow icon
                sveKategorijeMobile.classList.add('has-children');
                
                // Create mobile submenu if it doesn't exist
                let mobileSubMenu = document.querySelector('.mobile-subcategories');
                if (!mobileSubMenu) {
                    mobileSubMenu = document.createElement('div');
                    mobileSubMenu.className = 'mobile-subcategories';
                    
                    mobileSubMenu.innerHTML = `
                        <a href="/svekategorije/bijelatehnika"><i class="fas fa-tools"></i> Bijela tehnika</a>
                        <a href="/svekategorije/tviaudio"><i class="fas fa-tv"></i> Televizori i audio</a>
                        <a href="/svekategorije/sporetikaminipeci"><i class="fas fa-fire"></i> Šporeti, kamini i peći</a>
                        <a href="/svekategorije/ugradnatehnika"><i class="fas fa-plug"></i> Ugradna tehnika</a>
                        <a href="/svekategorije/telefonigaming"><i class="fas fa-gamepad"></i> Telefoni i Gaming</a>
                        <a href="/svekategorije/malikucniaparati"><i class="fas fa-blender"></i> Mali kućni aparati</a>
                        <a href="/svekategorije/grijanjeihladjenje"><i class="fas fa-snowflake"></i> Grijanje i hlađenje</a>
                        <a href="/svekategorije/laptopitableti"><i class="fas fa-laptop"></i> Laptop i tableti</a>
                        <a href="/svekategorije/razno"><i class="fas fa-bolt"></i> Razno</a>
                    `;
                    
                    // Insert submenu after "SVE KATEGORIJE" link
                    sveKategorijeMobile.parentNode.insertBefore(mobileSubMenu, sveKategorijeMobile.nextSibling);
                }
                
                // Toggle for submenu
                sveKategorijeMobile.addEventListener('click', function(e) {
                    e.preventDefault();
                    e.stopPropagation();
                    
                    this.classList.toggle('active');
                    
                    if (mobileSubMenu.style.display === 'block') {
                        mobileSubMenu.style.display = 'none';
                    } else {
                        mobileSubMenu.style.display = 'block';
                    }
                });
            }
     // Zatvaranje menija kada se klikne na link
     const mobileNavLinks = document.querySelectorAll('.mobile-nav a');
     mobileNavLinks.forEach(link => {
         link.addEventListener('click', function(e) {
             // Ako je link SVE KATEGORIJE, ne zatvaraj meni
             if (this.classList.contains('sve-kategorije')) {
                 e.stopPropagation();
                 return;
             }
             closeMenuFunc();
         });
     });
 
     // Add to cart buttons
     const addToCartButtons = document.querySelectorAll('.add-to-cart');
     addToCartButtons.forEach(button => {
         button.addEventListener('click', function() {
             // Animacija dodavanja u korpu
             this.classList.add('added');
             setTimeout(() => {
                 this.classList.remove('added');
             }, 500);
             
             // Ovde bi bio kod za stvarno dodavanje u korpu
             console.log('Added to cart');
         });
     });
     
     // Dual price range slider funkcionalnost
     if (minPriceRange && maxPriceRange) {
         // Funkcija za ažuriranje progress bara između dva klizača
         function updateProgress() {
             const minVal = parseFloat(minPriceRange.value);
             const maxVal = parseFloat(maxPriceRange.value);
             const minPosition = ((minVal - minPriceRange.min) / (minPriceRange.max - minPriceRange.min)) * 100;
             const maxPosition = ((maxVal - minPriceRange.min) / (minPriceRange.max - minPriceRange.min)) * 100;
             
             minPriceDisplay.textContent = minVal.toFixed(1) + '€';
             maxPriceDisplay.textContent = maxVal.toFixed(1) + '€';
             
             if (rangeProgress) {
                 rangeProgress.style.left = minPosition + '%';
                 rangeProgress.style.width = (maxPosition - minPosition) + '%';
             }
         }
         
         // Inicijalno postavljanje progress bara
         updateProgress();
         
         // Event listeneri za klizače
         minPriceRange.addEventListener('input', function() {
             const minValue = parseFloat(this.value);
             const maxValue = parseFloat(maxPriceRange.value);
             
             if (minValue >= maxValue) {
                 this.value = maxValue;
             }
             
             updateProgress();
         });
         
         maxPriceRange.addEventListener('input', function() {
             const maxValue = parseFloat(this.value);
             const minValue = parseFloat(minPriceRange.value);
             
             if (maxValue <= minValue) {
                 this.value = minValue;
             }
             
             updateProgress();
         });
     }
     
     // Apply filters button
     const applyFiltersBtn = document.querySelector('.apply-filters');
     if (applyFiltersBtn) {
         applyFiltersBtn.addEventListener('click', function() {
             // Get all selected brands
             const selectedBrands = [];
             document.querySelectorAll('.filter-option input[type="checkbox"]:checked').forEach(checkbox => {
                 selectedBrands.push(checkbox.id);
             });
             
             // Get price range
             const minPrice = minPriceRange ? minPriceRange.value : 0;
             const maxPrice = maxPriceRange ? maxPriceRange.value : 0;
             
         });
     }
 });
 </script>
