<!-- Main header with logo and search -->
<div class="main-header">
    <div class="header-container">
        <!-- Desktop view -->
        <a href="/" class="logo desktop">
            <img src="/logo.png" alt="TEHNOMAX" style="max-width: 180px;">
        </a>
        <form action="/search" method="get" class="search-bar desktop-search" id="desktop">
            <input type="text" name="q" placeholder="Pronađite proizvod, kategoriju ili brend...">
            <button><i class="fas fa-search"></i></button>
        </form>
        
        <div class="user-actions desktop">
            <% if (typeof session.user !== "undefined") { %>
                <a href="/profil" class="prijavljen-korisnik">
                    <i class="fas fa-user fa-lg"></i> <%= session.user.ime[0].toUpperCase() %><%= session.user.prezime[0].toUpperCase() %>
                </a>
            <% } else { %>
                <a href="/prijava" class="prijava">
                    <i class="fas fa-user fa-lg"></i> PRIJAVA
                </a>
            <% } %>
            <a href="/korpa" class="cart">
                <i class="fas fa-shopping-cart fa-lg"></i>
            </a>
        </div>
        
        <!-- Mobile view - aligned in one row -->
        <div class="mobile-top-nav">
            <button class="hamburger-menu" id="hamburgerMenu">
                <span class="hamburger-icon"></span>
                <span class="hamburger-icon"></span>
                <span class="hamburger-icon"></span>
            </button>
            
            <a href="/" class="logo" id="kt">
                <img src="/logo.png" alt="TEHNOMAX" style="max-width: 120px;">
            </a>
            
            <div class="user-actions">
                <% if (typeof session.user !== "undefined") { %>
                    <a href="/profil" class="prijavljen-korisnik" id="kt"> 
                        <i class="fas fa-user fa-lg"></i> <%= session.user.ime[0].toUpperCase() %><%= session.user.prezime[0].toUpperCase() %>
                    </a>
                <% } else { %>
                    <a href="/prijava" class="prijava" id="kt">
                        <i class="fas fa-user fa-lg"></i>
                    </a>
                <% } %>
                <a href="/korpa" class="cart" id="kt">
                    <i class="fas fa-shopping-cart fa-lg"></i>
                </a>
            </div>
        </div>
    </div>
    
    <!-- Mobile search bar in separate row below -->
    <div class="mobile-search-container" id="telefon">
        <form action="/search" method="get" class="search-bar">
            <input type="text" name="q" placeholder="Pronađite proizvod, kategoriju ili brend...">
            <button><i class="fas fa-search"></i></button>
        </form>
        
    </div>
</div>

