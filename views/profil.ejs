        }


        .dropdown-container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 25px 15px;
        }

        .dropdown-columns {
            display: flex;
            flex-wrap: wrap;
        }

        .dropdown-column {
            width: 20%;
            padding: 0 15px;
