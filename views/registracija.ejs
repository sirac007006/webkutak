}

.top-right {
    display: flex;
    gap: 20px;
    flex-wrap: wrap; /* Dozvoljava prelom na manjim ekranima */
}

/* Main header */
.main-header {
    background-color: #124e9a;
    padding: 15px 0;
    width: 100%;
}

.header-container {
    display: flex;
    align-items: center;
    justify-content: space-between;
