    border: none;
    border-radius: 25px;
    font-size: 14px;
    background-color: #fff;
    color: #333;
}

.search-bar input::placeholder {
    color: #999;
}

.search-bar button {
    position: absolute;
    right: 25px;
    top: 50%;
    transform: translateY(-50%);
    background: none;
    border: none;
    cursor: pointer;
    color: #333;
}

.user-actions {
    display: flex;
    align-items: center;
    gap: 20px;
    margin: 5px 0;
    flex-wrap: wrap; /* Dozvoljava prelom na manjim ekranima */
